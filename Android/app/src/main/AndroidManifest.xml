<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steelsidekick.steelsidekick">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SteelSidekick">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScaleActivity"
            android:label="Scale"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".ChordActivity"
            android:label="Chord"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".GuitarActivity"
            android:label="Guitar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".GuitarSelectActivity"
            android:label="Select Guitar"
            android:parentActivityName=".GuitarActivity">
        </activity>
    </application>
</manifest>